<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cy.wcdb.yyh.com.myglidefactoryview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name="cy.wcdb.yyh.com.myglidefactoryview.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".image.SingleImageActivity"
            android:theme="@style/AppCompatFullscreenStyle"/>


        <activity android:name=".RecycleViewActivity"/>

        <activity
            android:name=".image.ImagesActivity"
            android:theme="@style/ImagesStyle"/>
    </application>

</manifest>